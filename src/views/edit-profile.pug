extends base

block content
  if errMessage 
    p=errMessage

  form(method="POST", enctype="multipart/form-data").edit-profile__form
    label(for="avatar") Avater 
    input(type="file", id='avatar' name='avatar' accept='image/*') 
    input(type="text" name='iden', required, placeholder='ID' value=loggedUser.iden)
    input(type="email" name='email', required, placeholder='EMAIL' value=loggedUser.email)
    input(type="text" name='name',  required, placeholder='NAME' value=loggedUser.name)
    input(type='submit' value='Edit Profile')
    hr
    if !loggedUser.socialOnly
      div.edit-profile__password
        a(href="change-password") Change Password &rarr; 